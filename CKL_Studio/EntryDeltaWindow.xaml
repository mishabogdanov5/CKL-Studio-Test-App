<Window x:Class="WPFTraining.EntryDeltaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTraining"
        mc:Ignorable="d"
        Background="Gray"
        Title="EntryDeltaWindow" Height="300" Width="400">
    <StackPanel>
        <StackPanel x:Name="DeltaPanel" Orientation="Horizontal" Margin="40, 50, 0, 0">
            <Label x:Name="DeltaLabel" Content="Dalta Interval: " Width="100"/>
            <TextBox x:Name="DeltaTextBox" Margin="30, 0, 50, 0" Width="200"/>
        </StackPanel>

        <Button x:Name="ConfirmButton" Content="Confirm" Background="SkyBlue" Margin="100, 120, 100, 0" Click="ConfirmButton_Click"/>
    </StackPanel>
</Window>
